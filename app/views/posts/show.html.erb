<div>
  <h2><%= @post.rationale %></h2>
</div>

<div class="well">
  <div>
    <h3><span>Overtime Amount Requested: </span> <%= @post.overtime_request %> hours</h3>
  </div>

  <div>
    <h3><span>Employee: </span> <%= @post.user.full_name %> hours</h3>
  </div>

  <div>
    <h3><span>Date Submitted: </span> <%= @post.date %> hours</h3>
  </div>

  <div>
    <h3><span>Current Stage of Approval: </span> <%= @post.status %> hours</h3>
  </div>
</div>

<%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-primary' if policy(@post).update? %>